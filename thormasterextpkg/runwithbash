#!/bin/bash

if [ $# -lt 2 ]; then
 echo Usage: run NAME IP
 exit 1
fi

name=$1
ip=$2

mythornet=$(docker network ls | awk '{print $2}' | grep '^mythornet')
if [ -z "$mythornet" ]; then
  docker network create --subnet=192.168.10.0/24 mythornet
fi

echo docker run --net mythornet --ip ${ip} -v /home/jsmith/dev/docker/sharedfolder:/data -ti jcs/thormasterextpkg:0.1 ${name} /bin/bash
docker run --net mythornet --ip ${ip} -v /home/jsmith/dev/docker/sharedfolder:/data -ti jcs/thormasterextpkg:0.1 ${name} /bin/bash

